@using Microsoft.AspNetCore.Identity
@using Daimiel.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container mt-5">
        <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card login-logout-tab">
                        <div class="card-header">
                            <img src="~/lib/img/logo-jgcarrion.png" class="img-fluid rounded mx-auto d-block" alt="JGC Logo" />
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mx">

                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @UserManager.GetUserName(User)!</a>
                                        <a class="btn btn-primary btn-block btn-lg" role="button" asp-area="" asp-controller="Home" asp-action="Llenadora">Acceder</a>
                                        <form id="logoutForm" class="form-inline mt-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button id="logout" type="submit" class="btn btn-outline-primary btn-block btn-lg">Logout</button>
                                        </form>

                                    }
                                    else
                                    {
                                        <div class="container">
                                            <a class="btn btn-primary btn-block btn-lg" role="button" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                        </div>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>