@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="jumbotron jumbotron-fluid mt-5">
    <div class="container">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <p class="lead">Alta de nuevo usuario</p>
    </div>
</div>

<div class="container-fluid">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Input.Nombre"></label>
                <input asp-for="Input.Nombre" class="form-control" />
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-md-8">
                <label asp-for="Input.Apellido"></label>
                <input asp-for="Input.Apellido" class="form-control" />
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Input.GrupoLlenadora">Grupo de llenadoras</label>
                <select asp-for="Input.GrupoLlenadora" class="form-control">
                    <option selected value="">Seleccionar grupo...</option>
                    <option value="">---------------</option>
                    <option value="BRIK">BRIK</option>
                    <option value="CRISTAL">CRISTAL</option>
                    <option value="GEMI">GEMI</option>
                    <option value="HELICAP">HELICAP</option>
                    <option value="MINI">MINI</option>
                    <option value="PET">PET</option>
                    <option value="PRISMA">PRISMA</option>
                    <option value="RI">RI</option>
                    <option value="SPEED">SPEED</option>
                    <option value="TARRO">TARRO</option>
                    <option value="">---------------</option>
                    <option value="TODAS">TODAS</option>
                </select>
                <span asp-validation-for="Input.GrupoLlenadora" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <button type="submit" class="btn btn-primary btn-block btn-lg">Registro</button>
    </form>
</div>


